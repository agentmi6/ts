@model TicketSystem.Domain.Ticket



<h2>Ticketing System</h2>
<h3>@Html.DisplayFor(model => model.TicketTitle)</h3>

<div class="row">
    <div class="col-md-4">
        <h4><b>Category: </b>@Html.DisplayFor(model => model.Category.Name)</h4>
        <h4><b>Author: </b>@Html.DisplayFor(model => model.ApplicationUser.UserName)</h4>
        <h4><b>Priority: </b>@Html.DisplayFor(model => model.Priority.PriorityStatus)</h4>
    </div>
    <div class="col-md-4">
        <p><img src="@Url.Content(Model.ScreenshotURL)" alt="" width="400" height="250" /></p>
        <p>right-click open on the image to enlarge</p>
    </div>
    <div class="col-md-offset-9">
        <p><b>Description: </b>@Html.DisplayFor(model=>model.Description)</p>
    </div>
</div>

<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.TicketID }) |
    @Html.ActionLink("Back to List", "Index")
</p>
